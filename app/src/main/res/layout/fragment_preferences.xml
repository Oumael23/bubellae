<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink_preferences_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calorie_preference_question"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/radioGroupCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioLowCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/low_calorie" />

        <RadioButton
            android:id="@+id/radioModerateCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moderate_calorie" />

        <RadioButton
            android:id="@+id/radioNoPreferenceCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_preference_calorie" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/milk_preference_question"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/radioGroupMilk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radioClassicMilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classic_milk" />

        <RadioButton
            android:id="@+id/radioAlmondMilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/almond_milk" />

        <RadioButton
            android:id="@+id/radioNoMilk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_milk" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sugar_preference_question"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/radioGroupSugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radioNoSugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_sugar" />

        <RadioButton
            android:id="@+id/radio25Sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sugar_25" />

        <RadioButton
            android:id="@+id/radio50Sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sugar_50" />

        <RadioButton
            android:id="@+id/radio75Sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sugar_75" />
    </RadioGroup>
</LinearLayout>
